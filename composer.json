{
    "name": "vertex-it/voiler",
    "description": "",
    "keywords": [
        "vertex-it",
        "voiler"
    ],
    "homepage": "https://github.com/vertex-it/voiler",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Mile PaniÄ‡",
            "email": "mile.panic96@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "^8.0",
        "spatie/laravel-activitylog": "^3.14",
        "spatie/laravel-medialibrary": "^9.0.0",
        "spatie/laravel-permission": "^3.0",
        "spatie/laravel-sluggable": "^2.4",
        "spatie/laravel-view-models": "^1.3"
    },
    "require-dev": {
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.0",
        "friendsofphp/php-cs-fixer": "*"
    },
    "autoload": {
        "psr-4": {
            "VertexIT\\Voiler\\": "src"
        },
        "files": [
            "src/Http/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VertexIT\\Voiler\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "VertexIT\\Voiler\\VoilerServiceProvider"
            ],
            "aliases": {
                "Voiler": "VertexIT\\Voiler\\VoilerFacade"
            }
        }
    }
}
